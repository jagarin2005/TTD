<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /p/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^index$ public/index.php/$1/ [NC,R=301,L]
    RewriteRule ^login$ public/login.php/$2
    RewriteRule ^register$ public/register.php/$2
    DirectoryIndex public/index.php
</IfModule>